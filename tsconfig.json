{
  "compilerOptions": {
    "outDir": "./app/",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./app/*"
  ],
  "exclude": [
    "node_modules",
    "out"
  ]
}